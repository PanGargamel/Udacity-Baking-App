<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/card_margin">

    <TextView
        android:id="@+id/tv_step_title"
        android:textSize="@dimen/step_title_text_size"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/card_content_margin"
        android:layout_marginBottom="@dimen/card_content_margin"
        android:layout_marginLeft="@dimen/step_title_margin"
        android:layout_marginRight="@dimen/step_title_margin" />

</android.support.v7.widget.CardView>