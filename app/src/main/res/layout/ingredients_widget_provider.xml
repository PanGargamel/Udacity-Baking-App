<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/widget_linear_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/widgetBackground"
    android:padding="@dimen/widget_margin">

    <TextView
        android:id="@+id/widget_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/widget_title_padding"
        android:background="@color/colorPrimary"
        android:contentDescription="@string/widget_default_title"
        android:text="@string/widget_default_title"
        android:textColor="@color/widgetTextColor"
        android:textSize="@dimen/widget_title_text_size"
        android:textAlignment="center"/>

    <TextView
        android:id="@+id/widget_ingredients"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/widget_content_padding"
        android:contentDescription="@string/ingredients"
        android:text="@string/widget_default_content"
        android:textColor="@color/widgetTextColor"
        android:textSize="@dimen/widget_content_text_size"/>

</LinearLayout>